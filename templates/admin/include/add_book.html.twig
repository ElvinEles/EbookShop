{% extends "admin/indexadmin.html.twig" %}

{% block title %}Kateqoriyalar{% endblock %}
{% block place %}Yeni Kateqoriya{% endblock %}

{% block content %}
<div class="col-md-12">

{% if app.session.get('add_book_success') != null %}
<div class="alert alert-success">
{{app.session.remove('add_book_success')}}
</div>
{% endif %}

{% if app.session.get('add_book_danger') != null %}
<div class="alert alert-danger">
{{app.session.remove('add_book_danger')}}
</div>
{% endif %}

{% if app.session.get('add_amount_price_success') != null %}
<div class="alert alert-warning">
 {{app.session.remove('add_amount_price_success')}}
</div>
{% endif %}

{% if app.session.get('add_category_success') != null %}
<div class="alert alert-warning">
 {{app.session.remove('add_category_success')}}
</div>
{% endif %}


<form method="post" action="{{ path('save_book') }}" enctype="multipart/form-data" role="form">
  <div class="box-body">
  <div  class="col-md-12">

  <div class="col-md-12">

  <div  class="form-group">
    <label for="exampleInputEmail1">Kitab adı:*</label>
    <input required type="text" autocomplete="off" name="book_name" class="form-control" id="exampleInputEmail1">
  </div>


  <div  class="form-group">
    <label for="exampleInputEmail1">Kitab müəllifi:*</label>
    <input  type="text" autocomplete="off" name="book_author" class="form-control" id="exampleInputEmail1">
  </div>



  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab qiyməti:*</label>
    <input required type="text" autocomplete="off" name="book_price" class="form-control" id="book_price">
    <span hidden class="registeralerttext" id="book_price_text">Qiymət ədəd olmamalıdır</span>
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab şəkili:*</label>
    <input required type="file" autocomplete="off" name="book_image" class="form-control" id="exampleInputEmail1">
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab miqdar:*</label>
    <input required type="text" autocomplete="off" name="book_amount" class="form-control" id="book_amount">
    <span hidden class="registeralerttext" id="book_amount_text">Qiymət ədəd olmamalıdır</span>
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab kateqoriya:*</label>
    <select class="form-control" name="book_category">
    <option value="0">Kateqoriya seçin</option>
      {% for category in categories %}
    <option value="{{ category.getId() }}">{{ category.getCategoryName() }}</option>
       {% endfor %}
    </select>
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab menu:*</label>
    <select class="form-control" name="book_menu">
    <option value="0">Menu seçin</option>
      {% for menu in menus %}
    <option value="{{ menu.getMenuId() }}">{{ menu.getMenuName() }}</option>
       {% endfor %}
    </select>
  </div>


  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab haqqında:*</label>
    <div class='box box-info'>
      <div class='box-header'>
      </div><!-- /.box-header -->
      <div class='box-body pad'>
        <form>
          <textarea id="editor1" class="textarea form-control"  name="book_about" rows="10" >

          </textarea>
        </form>
      </div>
    </div><!-- /.box -->
  </div>
  </div>

  <div class="box-footer">
    <button type="submit" class="btn btn-primary btn-block">Təsdiqlə</button>
  </div>

  </div>
  </div><!-- /.box-body -->
</form>
</div>
{% endblock %}
