{% extends "admin/indexadmin.html.twig" %}

{% block title %}Kateqoriyalar{% endblock %}
{% block place %}Kateqoriya Düzəliş{% endblock %}

{% block content %}
<div class="col-md-12">




<form method="post" action="{{ path('update_book',{'book_id':book.book_id})}}" enctype="multipart/form-data" role="form">
  <div class="box-body">
  <div  class="col-md-12">

  <div class="col-md-12">

  <div  class="form-group">
    <label for="exampleInputEmail1">Kitab adı:*</label>
    <input required type="text" value="{{book.book_name}}" autocomplete="off" name="book_name" class="form-control" id="exampleInputEmail1">
  </div>


  <div  class="form-group">
    <label for="exampleInputEmail1">Kitab müəllifi:*</label>
    <input  type="text" autocomplete="off" value="{{book.book_author}}" name="book_author" class="form-control" id="exampleInputEmail1">
  </div>



  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab qiyməti:*</label>
    <input required type="text" value="{{book.book_price}}" autocomplete="off" name="book_price" class="form-control" id="book_price">
    <span hidden class="registeralerttext" id="book_price_text">Qiymət ədəd olmamalıdır</span>
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab şəkili:*</label>
    <input  type="file" autocomplete="off" name="book_image" class="form-control" id="exampleInputEmail1">
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab miqdar:*</label>
    <input required type="text" value="{{book.book_amount}}" autocomplete="off" name="book_amount" class="form-control" id="book_amount">
    <span hidden class="registeralerttext" id="book_amount_text">Qiymət ədəd olmamalıdır</span>
  </div>

  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab kateqoriya:*</label>
    <select class="form-control" name="book_category">
    <option selected value="{{book.book_id}}">{{book.category_name}}</option>


      {% for category in categories %}
    <option value="{{ category.getId() }}">{{ category.getCategoryName() }}</option>
       {% endfor %}
    </select>
  </div>


  <div  class="form-group">
    <label  for="exampleInputEmail1">Kitab haqqında:*</label>
    <div class='box box-info'>
      <div class='box-header'>
      </div><!-- /.box-header -->
      <div class='box-body pad'>
        <form>
          <textarea id="editor1" class="textarea form-control"  name="book_about" rows="10" >
           value="{{book.book_about}}"
          </textarea>
        </form>
      </div>
    </div><!-- /.box -->
  </div>
  </div>

  <div class="box-footer">
    <button type="submit" class="btn btn-primary btn-block">Yenilə</button>
  </div>

  </div>
  </div><!-- /.box-body -->
</form>
</div>
{% endblock %}
