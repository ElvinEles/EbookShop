{% extends "admin/indexadmin.html.twig" %}

{% block title %}Kateqoriyalar{% endblock %}
{% block place %}Bütün Kateqoriya{% endblock %}

{% block content %}
<div class="col-md-12">

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title"></h3>
        <div class="box-tools">
          <div class="input-group">
            <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search"/>
            <div class="input-group-btn">
              <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr >
            <th class="text-center">ID</th>
            <th class="text-center">Kateqoriya adı</th>
            <th class="text-center">Menu adı</th>
            <th class="text-center">Action</th>
          </tr>

          {% for category in categories %}
          <tr>
            <td class="col-md-2 text-center">{{ category.id }}</td>
            <td class="col-md-4 text-center">{{ category.category_name }}</td>
            <td class="col-md-4 text-center">{{ category.menu_name}}</td>
            <td class="col-md-2 text-center">
              <a href="{{ path('edit_category_page',{'category_id':category.id})}}"><i class="fas fa-pen"></i></a>
              <a style="margin-left:20px;color:red;"  data-id="{{category.id}}"  data-toggle="modal" data-target="#deleteCategoryModal">
               <i class="fas fa-trash"></i>
              </a>
             </td>
          </tr>
          {% endfor %}
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>

</div>

<!-- Modal -->
<div class="modal fade" id="deleteCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xəbərdarlıq</h5>

      </div>
        <form  action="{{ path('delete_category')}}" method="post">
      <div class="modal-body">
      Silmək istədiyinizdən əminsinizmi?
      </div>

     <input type="hidden" id="delete_category_id" name="delete_category_id">

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Xeyr</button>
        <button type="submit" class="btn btn-danger">Bəli</button>
      </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
